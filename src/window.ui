                                    </child>
                                    <child>
                                      <object class="GtkToggleButton" id="snare_toggle_12"/>
                                    </child>
                                  </object>
                                </child>
                                <!-- Group 4: 4 toggle buttons for Snare -->
                                <child>
                                  <object class="GtkBox">
